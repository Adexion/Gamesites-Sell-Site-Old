<div class="modal">
    <div class="modal-content">
        <div class="payments-box">
            <span class="close">&times;</span>
            {{ form_start(voucherForm, {action: path('voucher'), method: "POST"}) }}
            <div class="mx-between">
                <p>&nbsp;</p>
                <p class="payments-box-text">Email</p>
            </div>
            {{ form_widget(voucherForm.email,{ 'attr': {'class': 'payments-box-input', 'placeholder':'np. test@test.pl'}}) }}

            <div class="mx-between">
                <p>&nbsp;</p>
                <p class="payments-box-text">Nick</p>
            </div>
            {{ form_widget(voucherForm.username,{ 'attr': {'class': 'payments-box-input', 'placeholder':'np. Steve'}}) }}

            <div class="mx-between">
                <p>&nbsp;</p>
                <p class="payments-box-text">Kod</p>
            </div>
            {{ form_widget(voucherForm.code,{ 'attr': {'class': 'payments-box-input', 'placeholder':'np. MG61ab794cac5b07.75478479'}}) }}

            {{ form_widget(voucherForm.submit,{ 'attr': {'class': 'btn btn-shop payments-box-checkbox'}}) }}
            {{ form_end(voucherForm) }}
        </div>
    </div>
</div>
<script>
    (() => {
        const modal = document.querySelector(".modal");
        document.querySelector(".modal-btn").addEventListener('click', () => {
            modal.style.display = "block";
        });

        document.querySelector(".close").addEventListener('click', function() {
            modal.style.display = "none";
        });

        window.onclick = function(event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        }
    })();
</script>