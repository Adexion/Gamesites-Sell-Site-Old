{% extends 'old/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center flex-column m-4">
            <div class="col-lg-12 mb-5 mt-5 text-center">
                <h1>{{ "Thank You Payment" | trans ~ " : "}}<span class="">{{ type | trans }}</span></h1>
                <h2 class="base">{{ "Your payment id is" | trans ~ " : "  }}<span class="">{{ paymentId }}</span></h2>
                <hr>
                <h2 class="base  my-5">{{ message | trans | nl2br }}</h2>
                {% if link is defined %}
                    <a class="animate h5" href="{{ link }}">{{ app.request.schemeAndHttpHost }}{{ link }}</a>
                {% endif %}
                {% if voucher is defined %}
                    <h3>{{ "This is your voucher" | trans ~ " : " }}<span class="">{{ voucher }}</span></h3>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

