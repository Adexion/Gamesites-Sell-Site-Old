<ul class="pagination justify-content-center ">
    {% set maxPage = ((count / perPages) | round(0, 'ceil')) %}

    <li class="page-item {% if currentPage == 1 %}disabled{% endif %}"><a class="page-link" href="{{ path(path, {slug: currentPage - 1}) }}">Poprzednia</a></li>
    {% for index in 0 .. maxPage  %}
        <li class="page-item {% if index == currentPage %}active{% endif %}"><a class="page-link" href="{{ path(path, {slug: index}) }}">{{ index + 1}}</a></li>
    {% endfor %}
    <li class="page-item {% if currentPage == maxPage %}disabled{% endif %}"><a class="page-link" href="{{ path(path, {slug: currentPage + 1}) }}">NastÄ™pna</a></li>
</ul>