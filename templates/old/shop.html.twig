{% extends 'old/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center m-4">
            <div class="col-lg-8 col-md-12 row justify-content-center font-weight-normal">
                {% for item in items %}
                    <div class="gs-item m-lg-4 mb-4">
                        <a class="gs-link" href="{{ path('item', { id: item.id }) }}">
                            <div class="gs-item-content-shop text-center d-flex flex-column justify-content-center">
                                <img src="{{ asset('/assets/images/' ~ item.image) }}" alt=""/>
                                <div class="mt-4">
                                    <h4 class="font-weight-bold">{{ item.name | upper }}</h4>
                                    {{ item.discountedPrice | format_currency('PLN') }}
                                    <div class="gs-item-desc">{{ item.description | raw }}</div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>

            <div class="col-lg-4 col-md-12 is-info-container">
                <div class="row justify-content-center mb-5">
                    <button type="button" class="gs-accept animate" data-bs-toggle="modal" data-bs-target="#modal">{{ 'Realize voucher' | trans }}</button>
                </div>
                <div class="row justify-content-center">
                    <div class="is-info">
                        <h3>Ostatnie zamówienia</h3>
                        {% if lastBuyers %}
                            {% set crafthead = "https://crafthead.net/avatar/" %}
                            <div class="d-flex gap-3 flex-wrap">
                            {% for buyer in lastBuyers %}
                                <div class="d-flex justify-content-center align-items-center">
                                    <img class="is-info-head" src="{{ crafthead }}{{ buyer.username }}" alt="{{ buyer.username }}"/>
                                    <div class="d-flex flex-column">
                                        <p>{{ buyer.username }}</p>
                                        <p>{{ buyer.date | date('d.m.Y H:i') }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                        {% else %}
                            <h4>Brak zamówień w tym miesiącu</h4>
                        {% endif %}
                    </div>

