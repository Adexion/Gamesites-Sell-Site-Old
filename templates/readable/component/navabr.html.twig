<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/"><img src="/assets/images/{{ logo }}" width="90" height="90" alt="logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
                aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'index' %}active{% endif %}"
                       href="{{ path('index', {_locale: app.request.locale}) }}"><i
                                class="fas fa-home"></i> {% trans %}Home{% endtrans %}</a>
                </li>
                {% if playerRank is not empty or guildRank is not empty %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('index', {_locale: app.request.locale}) }}#rank"><i
                                    class="fas fa-users"></i> {% trans %}Rank{% endtrans %}</a>
                    </li>
                {% endif %}
                {% if areBansSet %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'bans' %}active{% endif %}"
                           href="{{ path('bans', {_locale: app.request.locale}) }}#rank"><i
                                    class="fas fa-ban"></i> {% trans %}Bans{% endtrans %}</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'rule' %}active{% endif %}"
                       href="{{ path('rule', {_locale: app.request.locale}) }}"><i
                                class="fas fa-book"></i> {% trans %}Rules{% endtrans %}</a>
                </li>
                {% if discord %}
                    <li class="nav-item">
                        <a class="nav-link" rel="noreferrer" href="{{ discord }}"><i class="fab fa-discord"></i> Discord</a>
                    </li>
                {% endif %}
                {% if ts3 %}
                    <li class="nav-item">
                        <a class="nav-link" rel="noreferrer" href="{{ ts3 }}"><i class="fab fa-teamspeak"></i>
                            TeamSpeak3</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'contact' %}active{% endif %}"
                       href="{{ path('contact', {_locale: app.request.locale}) }}#admin"><i
                                class="fas fa-address-book"></i> {% trans %}Contact{% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('shop', {_locale: app.request.locale}) }}" class="nav-link">
                        <button type="button" class="btn btn-outline-danger "><i class="fas fa-cart"></i>{% trans %}Shop{% endtrans %}
                        </button>
                    </a>
                </li>
            </ul>
            <span class="navbar-nav ms-lg-5">
                {% if serverInfo | length == 0 %}
                    <span class="navbar-brand d-none d-lg-block"><i class="fa fa-circle offline fa-sm ml-1" id="status-offline"> </i><b>&nbsp;0/0</b></span>
                {% else %}
                    <span class="navbar-brand d-none d-lg-block"><i class="fa fa-circle online fa-sm ml-1" id="status-online"> </i><b>&nbsp;{{ serverInfo.Players }}/{{ serverInfo.MaxPlayers }}</b></span>
                {% endif %}
            </span>
        </div>
    </div>
</nav>

