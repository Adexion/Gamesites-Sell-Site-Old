{% extends 'client/simple/dark/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center m-lg-4 m-md-0 pb-4">
            <div class="col-lg-12 mb-5 mt-5 text-center">
                <h1 class="text-white">{{ 'Please wiat'| trans }}...</h1>
                <h4 class="">
                    {{ 'Redirect' | trans }}
                </h4>
            </div>
            <div class="d-flex justify-content-center">
                {{ form_start(form, {name: 'payment'}) }}
                <button class="gs-accept h3 mt-4" type="submit">{{ 'Go to payment now' | trans }}</button>
                {{ form_end(form) }}
            </div>
            <script>
                window.onload = function () {
                    window.setTimeout(function () {
                        document.payment.submit();
                    }, 3000);
                };
            </script>
        </div>
    </div>
{% endblock %}

