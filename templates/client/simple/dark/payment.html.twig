{% extends 'client/simple/dark/base.html.twig' %}

{% block body %}
    <div class="container vh-100">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-12 my-5 text-center">
                <h1 class="text-white">{{ 'Please wiat'| trans }}...</h1>
                <h4>{{ 'Redirect' | trans }}</h4>
            </div>
            <div class="d-flex justify-content-center">
                {{ form_start(form, {name: 'payment'}) }}
                <button class="btn-lg btn-success" type="submit">{{ 'Go to payment now' | trans }}</button>
                {{ form_end(form) }}
            </div>
            <script>
                window.onload = function () {
                    window.setTimeout(function () {
                        document.payment.submit();
                    }, 3000);
                };
            </script>
        </div>
    </div>
{% endblock %}

