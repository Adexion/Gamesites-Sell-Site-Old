{% extends "client/simple/dark/base.html.twig" %}

{% block body %}
    <div class="container min-vh-100">
        <div class="row justify-content-center align-items-center flex-column gap-2 pb-5 mb-5">
            <div class="col-lg-12 mb-5 mt-5 text-center mt-5 pt-5">
                <h1>{{ "Contact Form" | trans }}</h1>
                <h2 class="base">Potrzebujesz się skontaktować? Napisz do nas!</h2>
            </div>

            {% if app.session.flashbag.peek('success') | length > 0 %}
                <div class="alert alert-success m-3 p-3">
                    {% for message in app.flashes('success') %}
                        {{ message | trans }}
                    {% endfor %}
                </div>
            {% endif %}

            <div class="col-md-12 col-lg-7 box">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
