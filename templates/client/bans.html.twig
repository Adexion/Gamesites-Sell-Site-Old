{% extends 'client/base.html.twig' %}

{% block body %}
    <div class="bg2 pt-5 h-100">
        <div class="container" id="rank">
            <div class="row mb-5">
                <div class="col-12">
                    <h1 class="text1 mb-3">
                        <i class="fas fa-ban text4 mr-3" aria-hidden="true"></i> {{ "Bans" | trans }}
                    </h1>
                </div>
            </div>
            <div class="row">
                {% for ban in bans %}
                    <div class="col-lg-6 col-12 p-3">
                        <div class="ranking anime row">
                            <div class="col-6">
                                <button class="btn-ranking" disabled>{{ loop.index }}.</button>&nbsp;&nbsp;
                                <img src="https://crafthead.net/cube/{{ ban.name }}" height="48px" width="48px"
                                     alt="{{ "Cube of" | trans }} {{ ban.name }}">
                                <span class="text8">{{ ban.name }}</span>
                            </div>
                            <div class="col-6 text7 text-end d-flex flex-column m-0">
                                <span>{{ "Date From" | trans }}: {{ ban.value }}</span>
                                <span>{{ "Reason" | trans }}: {{ ban.reason }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}