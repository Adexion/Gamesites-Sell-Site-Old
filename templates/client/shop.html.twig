{% extends 'client/base.html.twig' %}

{% block body %}
    <div class="container-fluid bg2">
        <div class="container">
            <p class="text-blue"></p>
            <h1 class="text-white">{{ 'Item Shop' | trans }}</h1>
            <h4 class="text1">{{ 'Shop information' | trans }}<br>
                <a href="#" target="_blank">{{ 'Shop rules' | trans }}</a>
            </h4>
            <div class="col-lg-12 text-end">
                <h4>
                    <button type="button" class="btn-shop anime" data-bs-toggle="modal" data-bs-target="#modal">{{ 'Realize voucher' | trans }}</button>
                </h4>
            </div>
            {% if items is empty %}
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ 'No informations' | trans | raw }}
                </div>
            {% endif %}
            <div class="d-flex flex-wrap">
                {% for item in items %}
                    <div class="col-lg-6 mb-5">
                        <div class="shop d-flex flex-wrap">
                            <div class="col-6">
                                <img src="{{ asset('/assets/images/' ~ item.image) }}" class="d-none d-lg-block shop-image">
                            </div>
                            <div class="col-6 text-center">
                                <div class="mb-60px"></div>
                                <p class="shop-item">{{ item.name }}</p>
                                <p class="shop-desc">{{ item.description | raw }}</p>
                                <p class="shop-price">
                                    {% if item.discount %}
                                        <stroke class="text-1 small">{{ item.price | format_currency('PLN') }}</stroke>
                                        {{ item.discountedPrice | format_currency('PLN') }}
                                    {% else %}
                                        {{ item.price | format_currency('PLN') }}
                                    {% endif %}
                                </p>
                            </div>
                            <div class="col-12 text-end">
                                <h2>
                                    <a class="btn-item anime" href="{{ path('item', {_locale: app.request.locale, id: item.id}) }}"><i class="fas fa-cart-plus"></i>&nbsp;</a>
                                </h2>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% include 'client/component/voucher.html.twig' %}
{% endblock %}