{% extends 'client/guild/dark/base.html.twig' %}

{% block body %}
    <main class="particle">
        <div class="h-100">
            <div class="container pt-5">
                <div class="container mt-5 text-white">
                    <h1>{{ "Thank You Payment" | trans ~ " : " }}<span class="">{{ type | trans }}</span></h1>
                    <h2 class="h4">{{ "Your payment id is" | trans ~ " : " }}<span class="">{{ paymentId }}</span></h2>
                    <hr>
                    <h2 class="h4 my-5">{{ message | trans | nl2br }}</h2>
                    {% if link is defined %}
                        <a class="animate h5" href="{{ link }}">{{ app.request.schemeAndHttpHost }}{{ link }}</a>
                    {% endif %}
                    {% if voucher is defined %}
                        <h5>{{ "This is your voucher" | trans ~ " : " }}<span class="">{{ voucher }}</span></h5>
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}

