{% if guildItem is not empty %}
    <div class="container mb-5">
        <div class="row">
            <h1 class="text1 mb-3"><i class="fas fa-trophy text4 mr-3" aria-hidden="true"></i> {{ "Items for" | trans }}
                <span class="text3"> {{ "GUILD" | trans }}</span></h1>
            <h2 class="text1 mb-3 h5">{{ "Here are the items you need to create a guild" | trans }}
                <br>{{ "To be able to play with his friends as one band" | trans }}</h2>
            <div class="row d-flex justify-content-lg-between">
                <div class="col-lg-4 mb-2 guild-dragon"></div>
                <div class="col-lg-6 mb-2">
                    <div class="mb-60px d-none d-lg-block"></div>
                    <div class="col-xl-12 items">
                        <div class="container">
                            <div class="d-flex flex-wrap justify-content-center">
                                {% for item in guildItem %}
                                    <div class="col-auto m-2 guild-item animate mb-2" tabindex="0"
                                         data-bs-toggle="popover" data-bs-trigger="hover focus"
                                         data-bs-content="x{{ item.count }}">
                                        <img alt="{{ item.name }} x{{ item.count }}" class="guild-item-image"
                                             src="/assets/images/{{ item.image }}">
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}