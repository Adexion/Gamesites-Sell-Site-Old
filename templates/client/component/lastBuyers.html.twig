<section class="last-buy">
    <div class="container">
        <div class="row mb-5">
            <h1 class="text-white">Ostatnie zakupy</h1>
            <div class="d-flex justify-content-center gap-3">
                {% set crafthead = "https://crafthead.net/avatar/" %}
                {% for buyer in lastBuyers %}
                    <div class="d-flex justify-content-center align-items-center text-white">
                        <img class="me-2" src="{{ crafthead }}{{ buyer.username }}/55" alt="{{ buyer.username }}"/>
                        <div class="d-flex justify-content-center flex-column">
                            <p class="m-0">{{ buyer.username }}</p>
                            <p class="m-0">{{ buyer.date | date('d.m.Y H:i') }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>