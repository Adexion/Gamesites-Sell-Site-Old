{% if administration %}
<div class="mb-5">
    <div class="container" id="admin">
        <h1 class="text1 mb-5"><i class="fas fa-user-shield text4 mr-3" aria-hidden="true"></i> {{ "Administration" | trans }}</h1>
        <div class="row justify-content-center flex-wrap">
            {% for a in administration %}
                <div class="col-lg-4 col-12 d-flex flex-column justify-content-center align-items-center">
                    <img src="https://mc-heads.net/body/{{ a.username ?? 'Steve'}}" alt="{{ a.username }}" class="mb-3 cube"/>
                    <h1 class="text3 h2">{{ a.username }}</h1>
                    <h2 class="text4 h4">{{ (a.description ?? ('Next noname' | trans ~ ' ...'))  | raw | nl2br }}</h2>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}