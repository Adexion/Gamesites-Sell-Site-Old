{% if development %}
    <style>
        .template-choicer {
            position: fixed;
            bottom: 35px;
            right: 0;
            background-color: #222;
            padding: 10px 25px 10px 10px;
            color: white;

        }

        .btn-template {
            height: 40px;
            padding: 0 15px;
            border-radius: 5px !important;
            background: var(--dark);
            color: var(--light);
        }

        .select-template {
            width: 100%;
            height: 40px;
            margin: 5px 0;
            border-radius: 5px;
        }
    </style>
    <div class="template-choicer">
        {{ form_start(templates, {action: path('app_template')}) }}
        {{ form_end(templates) }}
    </div>
{% endif %}