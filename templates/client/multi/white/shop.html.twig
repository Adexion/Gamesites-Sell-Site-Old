{% extends 'client/multi/white/base.html.twig' %}

{% block body %}
    <main class="particle">
        <div class="container-fluid">
            <div class="container">
                <div class="col-lg-12 text-end">
                    <h4>
                        <button type="button" class="btn btn-primary animate" data-bs-toggle="modal" data-bs-target="#modal">{{ 'Realize voucher' | trans }}</button>
                    </h4>
                </div>
                {% if items is empty %}
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ 'No informations' | trans | raw }}
                    </div>
                {% endif %}
                <div class="d-flex flex-wrap">
                    {% for item in items %}
                        <div class="col-lg-6 col-12 mb-5 box p-4">
                            <div class="shop flex-wrap row">
                                <div class="col-lg-6 d-lg-block d-none">
                                    <div style="background-image: url('{{ asset('/assets/images/' ~ item.image) }}')" class="item-image"></div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="mb-60px"></div>
                                    <h1 class="h3 text-dark">{{ item.name }}</h1>
                                    <p class="">{{ item.description | raw }}</p>
                                    <p class="item-price">
                                        {% if item.discount %}
                                            <strong class="h5 fw-bolder">{{ item.discountedPrice | format_currency('PLN') }}</strong>
                                            <del class="item-dell"><small>{{ item.price | format_currency('PLN') }}</small></del>
                                        {% else %}
                                            {{ item.price | format_currency('PLN') }}
                                        {% endif %}
                                    </p>
                                    <a class="btn btn-primary w-100 mt-4" href="{{ path('item', {id: item.id}) }}"><i class="fa fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
    {% include 'client/multi/white/component/voucher.html.twig' %}
    {% include 'client/multi/white/component/lastBuyers.html.twig' %}
{% endblock %}