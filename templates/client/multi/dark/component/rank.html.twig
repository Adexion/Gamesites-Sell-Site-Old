{% if playerRank is not empty %}
<section class="ranking mw-auto" id="ranking">
    <div class="ranking-text flex flex-align">
        <h1 class="ranking-text_h1">Ranking graczy</h1>
    </div>
    <div class="ranking-direction flex flex-align">
        <div class="ranking-left">
            {% set rank = playerRank | first %}
            {% for player in rank.result %}
            <div class="ranking-box flex flex-between flex-align">
                <div class="flex flex-align">
                    <h1 class="ranking-box_number">{{ loop.index }}</h1>
                    <img class="ranking-box_img"
                         src="https://crafthead.net/cube/{{ player.name }}" alt="HEAD">
                    <div>
                        <h1 class="ranking-box_nickname">{{ player.name }}</h1>
                    </div>
                </div>
                <div>
                    <p class="ranking-box_points-name">PKT</p>
                    <h2 class="ranking-box_points">{{ player.value }}</h2>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="ranking-right">
            <img class="ranking-image" src="{{ asset("assets/images/ranking_render.jpg") }}" alt="RENDER">
        </div>
    </div>
</section>
{%endif %}

