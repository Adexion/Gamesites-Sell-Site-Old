{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <div class="container bg-dark console">
        {% if response %}
            <p class="response text-white">{{ '[' ~ 'now' | date('Y-m-d H:i:s') ~ '] ' ~ response }}</p>
        {% endif %}
    </div>
    <script>
        (()=> {
            document.querySelector('.response').innerHTML = replaceColorCodes( document.querySelector('.response').innerHTML);
        })();
    </script>
    {{ form_start(form) }}
    {{ form_row(form.command) }}
    {{ form_row(form.server) }}
    <button class="btn btn-info w-100">Wy≈õlij</button>
    {{ form_end(form) }}
{% endblock %}